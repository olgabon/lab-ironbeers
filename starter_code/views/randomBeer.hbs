
<div class="random-beer">
    <img src="{{beer.image_url}}" alt="Beer image" height="250 px">
  <div class="beer-descripton">
    <h1>{{beer.name}}</h1>
    <h3>{{beer.tagline}}</h3>
    <p>{{beer.description}}</p>
    <h2>Food Pairing</h2>
    <ul>
      {{#each beer.food_pairing}}
        <li>
          {{this}}
        </li>
      {{/each}}
    </ul>
    <p><b>Brewers Tips:</b> {{beer.brewers_tips}}</p>
  </div>
</div>